<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>

        <variable
            name="forecastId"
            type="int" />
        <variable
            name="weatherViewModel"
            type="ago.droid.blueprint.viewmodels.weather.WeatherViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".pages.weather.WeatherFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/imgWeatherMain"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <TextView
                    android:id="@+id/txtWeatherCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgWeatherMain" />

                <TextView
                    android:id="@+id/txtTemperatureMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtWeatherCity" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="30dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTemperatureMain" />

                <ImageView
                    android:id="@+id/imgHumidity"
                    android:layout_width="27dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:layout_constraintBottom_toTopOf="@+id/txtHumidity"
                    app:layout_constraintEnd_toStartOf="@+id/imgmmWater"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtHumidity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider" />

                <TextView
                    android:id="@+id/txtHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="@+id/imgHumidity"
                    app:layout_constraintEnd_toStartOf="@+id/imgHumidity"
                    app:layout_constraintStart_toStartOf="@+id/imgHumidity"
                    app:layout_constraintTop_toBottomOf="@+id/imgHumidity" />

                <ImageView
                    android:id="@+id/imgmmWater"
                    android:layout_width="27dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:layout_constraintBottom_toTopOf="@+id/txtmmWater"
                    app:layout_constraintEnd_toStartOf="@+id/imgHeat"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgHumidity"
                    app:layout_constraintTop_toBottomOf="@+id/divider" />

                <TextView
                    android:id="@+id/txtmmWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="@+id/imgmmWater"
                    app:layout_constraintEnd_toStartOf="@+id/imgmmWater"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/imgmmWater"
                    app:layout_constraintTop_toBottomOf="@+id/imgmmWater" />

                <ImageView
                    android:id="@+id/imgHeat"
                    android:layout_width="27dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:layout_constraintBottom_toTopOf="@+id/txtHeat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgmmWater"
                    app:layout_constraintTop_toBottomOf="@+id/divider" />

                <TextView
                    android:id="@+id/txtHeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="@+id/imgHeat"
                    app:layout_constraintEnd_toStartOf="@+id/imgHeat"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/imgHeat"
                    app:layout_constraintTop_toBottomOf="@+id/imgHeat" />

                <ImageView
                    android:id="@+id/imgWindSpeed"
                    android:layout_width="27dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:layout_constraintBottom_toTopOf="@+id/txtWindSpeed"
                    app:layout_constraintEnd_toStartOf="@+id/imgDirection"
                    app:layout_constraintStart_toEndOf="@+id/txtWindSpeed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtHumidity" />

                <TextView
                    android:id="@+id/txtWindSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="@+id/imgWindSpeed"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/imgWindSpeed"
                    app:layout_constraintTop_toBottomOf="@+id/imgWindSpeed" />


                <ImageView
                    android:id="@+id/imgDirection"
                    android:layout_width="27dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="1dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:layout_constraintBottom_toTopOf="@+id/txtDirection"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgWindSpeed"
                    app:layout_constraintTop_toBottomOf="@+id/txtHumidity" />

                <TextView
                    android:id="@+id/txtDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="@+id/imgDirection"
                    app:layout_constraintEnd_toStartOf="@+id/imgDirection"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imgWindSpeed"
                    app:layout_constraintStart_toStartOf="@+id/imgDirection"
                    app:layout_constraintTop_toBottomOf="@+id/imgDirection" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="30dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtWindSpeed" />

                <Button
                    android:id="@+id/btnWeatherShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Share"
                    android:textColor="@color/black"
                    android:onClick="@{(view) -> weatherViewModel.navigateToFragment(view.id, forecastId)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider2" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
